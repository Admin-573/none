<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/back">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        tools:ignore="VisualLintBounds">


        <TextView
            android:id="@+id/TextHead"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:text="Camels Publication"
            android:fontFamily="cursive"
            android:textColor="@color/black"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/EditName"
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:fontFamily="serif-monospace"
            android:gravity="center"
            android:hint="Enter The Name "
            android:textStyle="bold"
            android:inputType="textPersonName"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/EditPass"
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:gravity="center"
            android:textStyle="bold"
            android:hint="Enter The Password (Numeric)"
            android:fontFamily="serif-monospace"
            android:inputType="numberPassword"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/EditEmail"
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:textStyle="bold"
            android:hint="Enter The Email"
            android:fontFamily="serif-monospace"
            android:gravity="center"
            android:inputType="textEmailAddress"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/EditPhone"
            android:layout_width="326dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:textStyle="bold"
            android:hint="Enter The Mobile Number"
            android:fontFamily="serif-monospace"
            android:inputType="phone"
            android:gravity="center"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/EditDate"
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:hint="Long Press To Enter Date"
            android:textStyle="bold"
            android:fontFamily="serif-monospace"
            android:inputType="date"
            android:gravity="center"
            android:minHeight="48dp" />

        <TextView
            android:id="@+id/TextDes"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Designation :-"
            android:textStyle="bold"
            android:fontFamily="cursive"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <Spinner
            android:id="@+id/spinDes"
            android:layout_width="239dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:contentDescription="-Choose Designation-"
            android:gravity="center"
            android:fontFamily="serif-monospace"
            android:minHeight="48dp" />

        <TextView
            android:id="@+id/TextGen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Gender :-"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:fontFamily="cursive"
            android:layout_marginBottom="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <RadioGroup
            android:id="@+id/RdGrp1"
            android:orientation="horizontal"
            android:layout_width="304dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginBottom="10dp">

            <RadioButton
                android:id="@+id/RDBMale"
                android:layout_width="94dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:buttonTint="@color/orange"
                android:text="Male"
                android:textStyle="bold"
                android:fontFamily="serif-monospace"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <RadioButton
                android:id="@+id/RDBFemale"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:buttonTint="@color/orange"
                android:text="Female"
                android:textStyle="bold"
                android:fontFamily="serif-monospace"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <RadioButton
                android:id="@+id/RDBOther"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:buttonTint="@color/orange"
                android:text="Other"
                android:textStyle="bold"
                android:fontFamily="serif-monospace"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
        </RadioGroup>

        <Button
            android:id="@+id/BtnSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#811F00"
            android:gravity="center"
            android:textStyle="bold"
            android:fontFamily="serif-monospace"
            android:text="Login"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            />

        <CheckBox
            android:id="@+id/chkTerms"
            android:layout_width="262dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:buttonTint="@color/orange"
            android:fontFamily="serif-monospace"
            android:text="I Accept Terms And Conditions ."
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>